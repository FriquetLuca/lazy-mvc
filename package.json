{
  "name": "lazy-mvc",
  "version": "1.0.0",
  "description": "A complete MVC server implemented with lazy-toolbox.",
  "main": "app.js",
  "scripts": {
    "delDist": "rmdir /q /s dist",
    "delClient": "rmdir /q /s public/assets/scripts",
    "delSass": "rmdir /q /s public/assets/stylesheets",
    "delAll": "npm run delDist && npm run delClient && npm run delSass",
    "webpack": "(npm run delClient && webpack) || webpack",
    "tsc": "(npm run delDist && tsc) || tsc",
    "packCSS": "(npm run delSass && sass src/stylesheets:public/assets/stylesheets) || sass src/stylesheets:public/assets/stylesheets",
    "start": "node dist/app.js",
    "updateServer": "npm install lazy-toolbox@latest",
    "updateClient": "npm install @lazy-toolbox/client@latest",
    "updatePortable": "npm install @lazy-toolbox/portable@latest",
    "updateAll": "npm install lazy-toolbox@latest @lazy-toolbox/client@latest @lazy-toolbox/portable@latest",
    "dev": "node dev-tools/compileWatcher.js",
    "startDev": "npm run updateAll && npm run dev",
    "build": "npm run delAll && webpack && tsc && sass src/stylesheets:public/assets/stylesheets"
  },
  "keywords": [],
  "author": "Friquet Luca",
  "license": "ISC",
  "dependencies": {
    "@lazy-toolbox/client": "^0.0.0",
    "@lazy-toolbox/portable": "^0.0.1",
    "dotenv": "^16.0.3",
    "lazy-toolbox": "^1.3.7",
    "mysql": "^2.18.1",
    "node": "^14.21.0",
    "node-html-parser": "^6.1.1"
  },
  "devDependencies": {
    "@types/mysql": "^2.15.21",
    "@types/node": "^18.11.9",
    "@types/ws": "^8.5.3",
    "dotenv-webpack": "^8.0.1",
    "sass": "^1.56.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
